<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
    <p>お客様情報が表示されます</p>

    <table class="table table-striped">

      <thead>
        <tr>
          <th>姓</th>
          <th>名</th>
          <th>電子メール</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.email %></td>
          <tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
